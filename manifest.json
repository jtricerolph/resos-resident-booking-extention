{
  "manifest_version": 3,
  "name": "Resos NewBook Assistant",
  "version": "1.0.0",
  "description": "Sidebar assistant for managing hotel resident walk-in restaurant bookings between NewBook and Resos",

  "permissions": [
    "sidePanel",
    "storage",
    "tabs"
  ],

  "host_permissions": [
    "https://api.newbook.cloud/*",
    "https://api.resos.com/*",
    "https://app.resos.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },

  "options_page": "settings/settings.html",

  "action": {},

  "content_scripts": [
    {
      "matches": ["https://app.resos.com/*"],
      "js": ["content/floating-button.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
